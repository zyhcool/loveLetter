        "@types/koa__router": "^8.0.2",
        "@types/node": "^12.12.6",
        "@types/shelljs": "^0.8.7",
        "@types/uuid": "^8.0.0",
        "nodemon": "^2.0.2",
        "shelljs": "^0.8.3",
        "ts-node": "^8.8.2",
        "typescript": "^3.8.3"
    },
